.container-fluid.m-auto
  = form_with(model: order, local: true, class: 'm-auto p-5 myform') do |f| 
    - if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |message|
            %li= message
  
    .field.form-group.p-2
      = f.label :name
      = f.text_field :name, size: 40 , class:"form-control "
    .field.form-group.p-2
      = f.label :address
      = f.text_area :address, rows: 3, cols: 40, class:"form-control"
    .field.form-group.p-2
      = f.label :email
      = f.email_field :email, size: 40, class:"form-control"
    .field.form-group.p-2
      = f.select :pay_type, Order.pay_types.keys, prompt: 'Select a payment method'
    .actions.text-center.mt-4
      = f.submit 'Place Order', class: "btn btn-secondary"
